{% extends 'WsunBundle:Default:index.html.twig'%}

{% block body %}
  <div class="box">

    <h1>Nuevo Empleado</h1>

    {{ form_start(form) }}
    <div class="form-group col-lg-6">


        <div class="input-group-addon">{{ form_label(form.cedulaEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.cedulaEmp,{'attr':{'class':'form-control','placeholder':'Cédula'} }) }}
    </div>  
    <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.nombreEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.nombreEmp,{'attr':{'class':'form-control','placeholder':'Nombre'} }) }}
    </div>

    <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.apellidoEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.apellidoEmp,{'attr':{'class':'form-control','placeholder':'Apellido'} }) }}
    </div>

     <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.telefonoEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.telefonoEmp,{'attr':{'class':'form-control','placeholder':'Telefono  '} }) }}
