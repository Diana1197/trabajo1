        {{ form_widget(form.direccion,{'attr':{'class':'form-control','placeholder':'Dirección'} }) }}
    </div>

    <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.email)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'E-mail'} }) }}
    </div>

    <div class="form-group col-lg-6">
         <div class="input-group-addon">{{ form_label(form.cargoEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.cargoEmp,{'attr':{'class':'form-control','placeholder':'Cargo'} }) }}
    </div>

     <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.gradoEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.gradoEmp,{'attr':{'class':'form-control','placeholder':'Grado'} }) }}
    </div>

     <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.sueldo)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.sueldo,{'attr':{'class':'form-control','placeholder':'Sueldo '} }) }}
    </div>

     <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.contacto)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.contacto,{'attr':{'class':'form-control','placeholder':'Contacto '} }) }}
    </div>
          {{ form_widget(form) }}
        <input type="submit" value="Crear" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('empleado_index') }}">Volver</a>
        </li>
    </ul>
